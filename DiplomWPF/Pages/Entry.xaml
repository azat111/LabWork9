<Page x:Class="DiplomWPF.Pages.Entry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Entry">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="175"
            >
            <TextBlock Text="Логин"></TextBlock>
            <TextBox x:Name="LoginTextBox" Height="20" Width="auto"></TextBox>

            <TextBlock Text="Пароль" Height="20"></TextBlock>
            <PasswordBox x:Name="PasswordPasswordBox"></PasswordBox>

            <Button x:Name="EntryButton" Height="25" Margin="0 10 0 0" Content="Войти" Click="EntryButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
